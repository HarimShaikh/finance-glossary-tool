class account:
    balance = 0 

    def deposit(self, deposit_amount):
        self.balance += deposit_amount 

        print(f"Deposited ${deposit_amount}. New Balance: ${self.balance}.")

    def withdraw(self, withdraw_amount):

        if withdraw_amount > self.balance:
            print("Transaction Declined: Insufficient Balance.")
        
        else:
            self.balance -= withdraw_amount
            print(f"Withdrawal Amount: ${withdraw_amount}. New Balance: ${self.balance}")

# defining the object
my_account = account()


# withdraw_amount = float(input("How much would you like to withdraw today ? "))


# my_account.deposit(deposit_amount)
# my_account.withdraw(withdraw_amount)


def withdraw():
    

    try:
        withdraw_amount = float(input("How much would you like to withdraw today ? "))
        my_account.withdraw(withdraw_amount)
    
    except ValueError:
        print("Please Enter a Number.")

def deposit():
    try:
        deposit_amount = float(input("How much would you like to deposit today ? "))
        my_account.deposit(deposit_amount)
    
    except ValueError:
        print("Please Enter a Number.")


deposit()
withdraw()
